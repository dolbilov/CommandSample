<Window
    CanResize="False"
    Height="250"
    Icon="/Assets/avalonia-logo.ico"
    Padding="5"
    RequestedThemeVariant="Light"
    Title="CommandSample"
    Width="400"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="250"
    d:DesignWidth="400"
    mc:Ignorable="d"
    x:Class="CommandSample.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CommandSample.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, *">
        <TextBlock
            FontWeight="Bold"
            Grid.Column="0"
            Grid.Row="0"
            Text="Me:"
            VerticalAlignment="Center" />

        <StackPanel
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            Spacing="5">
            <Button
                Command="{Binding OpenThePodBayDoorsCommand}"
                Content="Open the pod bay doors, HAL."
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" />
            <DockPanel>
                <TextBox
                    DockPanel.Dock="Left"
                    Margin="0,0,5,0"
                    Padding="8,8,6,8"
                    Text="{Binding RobotName}"
                    Watermark="Robot Name"
                    Width="100" />
                <Button
                    Command="{Binding OpenThePodBayDoorsFellowRobotCommand}"
                    CommandParameter="{Binding RobotName}"
                    Content="{Binding RobotName, StringFormat='Open the Pod Bay for {0}.', TargetNullValue='No other robots here.'}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center" />
            </DockPanel>
            <Button
                Command="{Binding OpenThePodBayDoorsAsyncCommand}"
                Content="Start Pod Bay Opening Protocol"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" />
        </StackPanel>

        <Separator
            Background="LightGray"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Height="2"
            HorizontalAlignment="Stretch"
            Margin="5" />

        <TextBlock
            FontWeight="Bold"
            Grid.Column="0"
            Grid.Row="2"
            Text="HAL9000:"
            VerticalAlignment="Center" />

        <Border
            BorderBrush="{DynamicResource SystemAccentColor}"
            BorderThickness="1"
            CornerRadius="10"
            Grid.Column="1"
            Grid.Row="2"
            Margin="5">
            <Grid ColumnDefinitions="*, Auto">
                <ItemsControl
                    Grid.Row="0"
                    ItemsSource="{Binding ConversationLog}"
                    Margin="5" />
                <Button
                    Command="{ReflectionBinding ConversationLog.Clear}"
                    Content="❌"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center" />
            </Grid>

        </Border>
    </Grid>


</Window>
